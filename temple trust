  <script>
    // --- Donation UI ---
    const preset = document.getElementById('presetAmounts');
    const custom = document.getElementById('customAmount');
    const openDonate = document.getElementById('openDonate');
    const donationModal = document.getElementById('donationModal');
    const cancelModal = document.getElementById('cancelModal');
    const finalAmount = document.getElementById('finalAmount');
    const proceed = document.getElementById('proceedDonate');

    preset.addEventListener('click', (e)=>{
      if(e.target.tagName !== 'BUTTON') return;
      Array.from(preset.children).forEach(b=>b.classList.remove('active'));
      e.target.classList.add('active');
      custom.value = '';
      finalAmount.value = e.target.dataset.amount;
    });

    custom.addEventListener('input', ()=>{
      Array.from(preset.children).forEach(b=>b.classList.remove('active'));
      finalAmount.value = custom.value || '';
    });

    openDonate.addEventListener('click', ()=>{
      donationModal.classList.add('open');
      donationModal.setAttribute('aria-hidden','false');
      if(!finalAmount.value) finalAmount.value = custom.value || (preset.querySelector('button.active')?.dataset.amount || '101');
    });

    cancelModal.addEventListener('click', ()=>{
      donationModal.classList.remove('open');
      donationModal.setAttribute('aria-hidden','true');
    });

    // Simulate donation submission (replace with real payment integration)
    document.getElementById('donateForm').addEventListener('submit', (ev)=>{
      ev.preventDefault();
      const data = new FormData(ev.target);
      const name = data.get('donorName');
      const email = data.get('donorEmail');
      const amount = data.get('amount');

      // Basic client-side validation
      if(!name || !email || !amount || Number(amount) <= 0){
        alert('Please complete donor details and enter a valid amount.');
        return;
      }

      // Here: send data to backend / payment gateway
      // For demo, show a thank you modal + console receipt
      donationModal.classList.remove('open');
      donationModal.setAttribute('aria-hidden','true');
      alert(`Thank you, ${name}! Your donation of ₹${amount} has been received. A receipt will be sent to ${email}.`);
      console.log('DONATION RECEIPT (demo):', {name,email,amount,method: document.getElementById('recurring').checked ? 'monthly' : 'one-time',timestamp: new Date().toISOString()});
      ev.target.reset();
    });

    // Quick contact
    document.getElementById('contactForm').addEventListener('submit', (ev)=>{
      ev.preventDefault();
      const fm = new FormData(ev.target);
      alert('Thanks! Your message has been received. We will contact you shortly.');
      console.log('CONTACT:', Object.fromEntries(fm.entries()));
      ev.target.reset();
    });

    // Close modal on outside click
    donationModal.addEventListener('click',(e)=>{
      if(e.target === donationModal){
        donationModal.classList.remove('open');
        donationModal.setAttribute('aria-hidden','true');
      }
    });

    // Small accessibility: ESC key closes modal
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'Escape'){
        donationModal.classList.remove('open');
        donationModal.setAttribute('aria-hidden','true');
      }
    });

    // Prefill final amount if user clicks proceed in right panel
    proceed.addEventListener('click', ()=>{
      const val = finalAmount.value || custom.value || (preset.querySelector('button.active')?.dataset.amount) || 101;
      finalAmount.value = val;
      donationModal.classList.add('open');
      donationModal.setAttribute('aria-hidden','false');
    });

    // Smooth scroll for internal links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const target = document.querySelector(a.getAttribute('href'));
        if(target){
          e.preventDefault();
          target.scrollIntoView({behavior:'smooth',block:'start'});
        }
      });
    });
  </script>
